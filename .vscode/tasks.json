{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++.exe build active file",

			"command": "D:\\sys\\MinGW\\mingw64\\bin\\g++.exe",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}",

				"shell": {

					"executable": "powershell.exe"
				}
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "C/C++: g++.exe build and run active file",
			"command": "D:\\sys\\MinGW\\mingw64\\bin\\g++.exe -g ${file} -o ${fileBasenameNoExtension}.exe ; .\\${fileBasenameNoExtension}.exe ; echo `n ",
			"options": {
				"cwd": "${fileDirname}",
				"shell": {

					"executable": "powershell.exe"
				},
			},
			"promptOnClose": false,
			"presentation": {

				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},

			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}